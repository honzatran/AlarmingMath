<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/listItem_time"
        android:text="@string/time"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:textSize="30sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/listItem_alarmName"
        android:text="@string/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/listItem_time"
        android:layout_toEndOf="@id/listItem_time"
        android:textSize="20sp"
        android:textColor="@color/dark_grey"/>

    <TextView
        android:id="@+id/listItem_method"
        android:text="@string/method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/listItem_time"
        android:layout_toEndOf="@id/listItem_time"
        android:layout_below="@id/listItem_alarmName"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/listItem_repeat"
        android:text="@string/repetition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/listItem_method"
        android:layout_toEndOf="@id/listItem_method"
        android:layout_below="@id/listItem_alarmName"
        android:textSize="12sp"
        android:textStyle="italic"
        />

    <ImageView
        android:id="@+id/listItem_imgActive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"/>
    <!--tohle tam bylo, je to čistě věc estetiky, mně se to líbí takhle :)
    android:layout_alignParentBottom="true"
    android:layout_alignParentTop="true"-->


</RelativeLayout>