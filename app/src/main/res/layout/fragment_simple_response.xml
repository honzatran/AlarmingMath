<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.vyvojmobilapp.alarmingmath.response.simple.SimpleResponseFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:orientation="vertical">

    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1"-->
        <!--android:padding="30dp"-->
        <!--android:text="@string/hello_blank_fragment"-->
        <!--android:id="@+id/fragment_text"-->
        <!--/>-->

    <TextView
        android:id="@+id/simple_response_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom|center"
        android:text="@string/simple_alarm_name"
        android:textSize="40sp"
        android:paddingBottom="10dp"
        />
    <TextView
        android:id="@+id/simple_response_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|top"
        android:paddingTop="5dp"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/dismiss_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dismiss_alarm"
        android:onClick="dismissAlarm" />
</LinearLayout>
