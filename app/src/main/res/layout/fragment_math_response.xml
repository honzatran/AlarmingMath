<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.android.vyvojmobilapp.alarmingmath.SimpleResponseFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/math_response_alarmName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="bottom|center"
        android:text="@string/simple_alarm_name"
        android:textSize="40sp"
        android:paddingBottom="10dp"
        />
    <TextView
        android:id="@+id/math_response_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="7:20"
        android:gravity="center|top"
        android:paddingTop="5dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/math_solve"
        android:text="@string/math_solve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="bottom"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2" >

        <TextView
            android:id="@+id/math_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="30sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/math_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="6"
            android:layout_gravity="center_horizontal"
             />
    </LinearLayout>

    <Button
        android:id="@+id/math_check_result_button"
        android:text="@string/math_check_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>


